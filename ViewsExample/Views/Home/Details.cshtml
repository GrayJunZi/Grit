@model ViewsExample.Models.Person

<!DOCTYPE html>
<html lang="zh">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="UTF-8"/>
    <link rel="stylesheet" href="/bootstrap.min.css"/>
</head>
<body>
<h1>@Model.Name</h1>

<a href="/">返回</a>
<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th>名称</th>
        <th>性别</th>
        <th>年龄</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Gender</td>
            <td>
                @if (@Model.DateOfBirth != null)
                {
                    <span>@Model.DateOfBirth.Value.ToString("yyyy-MM-dd HH:mm:ss.ff")</span>
                    <span>@GetAge(Model.DateOfBirth) years old</span>
                }
            </td>
        </tr>
    
    </tbody>
</table>

@functions{

    double? GetAge(DateTime? dateOfBirth)
    {
        if (dateOfBirth is not null)
        {
            return (DateTime.Now - dateOfBirth.Value).TotalDays / 365.25;
        }

        return null;
    }

}

</body>
</html>